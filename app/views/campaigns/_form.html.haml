= form_for @campaign do |f|
  - if @campaign.errors.any?
    #error_explanation
      %h2= "#{pluralize(@campaign.errors.count, "error")} prohibited this campaign from being saved:"
      %ul
        - @campaign.errors.full_messages.each do |message|
          %li= message

  = render Form::InputgroupComponent.new do |component|
    - component.with_label do
      - render Form::LabelComponent.new(form: f, field: :name) do
        Name
    - component.with_input do
      - render Form::TextfieldComponent.new(form: f, field: :name)
  .actions
    = f.submit 'Save'
